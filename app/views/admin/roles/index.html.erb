<% page_name = "Listing Roles" %>
<%= title page_name %>
<%= content_tag :h2, page_name %>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td><%= link_to 'Show', [:admin, role] %></td>
    <td><%= link_to 'Edit', edit_admin_role_path(role) %></td>
    <td><%= link_to 'Destroy', [:admin, role], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New role', new_admin_role_path %>

<%= content_for :left do %>
  <%= render "admin/shared/menu_links" %>
<% end %>
