<span class="group-item fields">
  <span class="group-item-header">
    <%= f.label :name, t('services.filter_name'), :class => "floated" %>
    <%= f.text_field :name, :size => "17" %>
    <%= f.check_box :_destroy, :class => "styled-checkbox" %>
    <%= f.label :_destroy, t("global.destroy") %>
    <span class="add-group-item btn"><%= t('services.add_selection') %></span>
  </span>
  <div class="group-item-body">
    <%= f.fields_for :selections do |builder|   %>
      <%= render 'selection_fields', :f => builder %>
    <% end %>
    <span><%= link_to_add_fields t('services.add_selection'), f, :selections %></span>
  </div>
</span>