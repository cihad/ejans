<div class="page-form">
<%= form_for @service, :html => {:multipart => true} do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-item title-field row ">
    <%= f.label :title, t('global.title'), :class => "span2" %>
    <span class="span6">
      <%= f.text_field :title, :class => "span6" %>
    </span>
  </div>

  <div class="form-item textarea-field row">
    <%= f.label :description, t('global.description'), :class => "span2" %>
    <span class="span6">
      <%= f.text_area :description, :rows => "5", :class => "span6" %>
    </span>
  </div>

  <div class="form-item file-field row">
    <%= f.label :image, t('global.description'), :class => "span2" %>
    <span class="span6">
      <% if @service.image? %>
        <%= image_tag(@service.image_url) %>
        <%= f.check_box :remove_image %>
      <% end %>
      <%= f.file_field :image, :class => "span6" %>
      <%= f.hidden_field :image_cache %>
    </span>
  </div>

  <div class="form-item row" id="filters">
    <%= label_tag nil, t('services.new.add_filter'), :class => "span2" %>
    <span class="fields span6">
      <%= f.fields_for :filters do |builder| %>
        <%= render "filter_fields", { f: builder, service: @service}  %>
      <% end %>
    </span>
  </div>

  <%= f.fields_for :service_price do |builder| %>
    <%= render "price_fields", f: builder %>
  <% end %>


<div class="form-item textarea-field row">
    <%= label_tag nil, "Feeds", :class => "span2" %>
    <span class="span6">
      <%= f.fields_for :google_alert_feeds do |builder| %>
        <%= render "feeds", f: builder %>
      <% end %>
    </span>
  </div>
  
  <div class="form-actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
</div>