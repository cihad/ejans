<% page_name = "Listing Services" %>
<%= title page_name %>
<% 
  breadcrumbs.add 'Services'
%>

<%= content_tag :h2, page_name %>

<table>
  <tr>
    <th>Owner</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @services.each do |service| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= service.owner_id %></td>
    <td><%= service.title %></td>
    <td><%= truncate(service.description, :length => 40) %></td>
    <td><%= link_to 'Show', service %></td>
    <td><%= link_to 'Edit', edit_service_path(service) %></td>
    <td><%= link_to 'Destroy', service, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Service', new_service_path %>
