<table>
  <tr>
  <% tree = feature.levels %>
  <% tree.each_with_index do |level, i| %>
    <td>
      <select id="<%= i %>" name="<%= feature.form_machine_names[i] %>" class="span2">
        <option value="">Se√ßiniz</option>
        <% level.each do |category| %>
          <option value="<%= category.id %>" class="<%= category.parent_id unless i == 0 %>" <%= "selected" if category.id.to_s == params["#{feature.form_machine_names[i]}"] %>><%= category.name %></option>
        <% end %>
      </select>
    </td>
  <% end %>
  </tr>
</table>

<% javascript 'jquery-plugins/jquery.chained' %>
<%= javascript_tag do %>
  <% (tree.count - 1).times do |i| %>
    $("tree_category_<%= feature.conf.id %>_#<%= i+1 %>").chained("#tree_category_<%= feature.conf.id %>_<%= i %>");
  <% end %>
<% end %>