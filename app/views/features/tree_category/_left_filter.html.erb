<% feature.levels.each_with_index do |level, i| %>
  <select id="tree_category_<%= feature.conf.id %>_<%= i %>"
          name="<%= feature.form_machine_names[i] %>"
          class="span2 single-input">
    <option value="">Se√ßiniz</option>
    <% level.each do |category| %>
      <option value="<%= category.id %>"
              class="<%= category.parent.id unless i == 0 %>"
              <%= "selected" if category.id.to_s == params["#{feature.form_machine_names[i]}"] %>>
        <%= category.name %>
      </option>
    <% end %>
  </select>
<% end %>

<% javascript 'jquery-plugins/jquery.chained' %>
<%= javascript_tag do %>
  <% (feature.levels.count - 1).times do |i| %>
    $("#tree_category_<%= feature.conf.id %>_<%= i+1 %>").chained("#tree_category_<%= feature.conf.id %>_<%= i %>");
  <% end %>
<% end %>