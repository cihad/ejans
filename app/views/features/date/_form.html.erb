<%= form_item_layout do %>
  <%= form_label_layout do %>
    <%= feature.form_builder.label :value, feature.label %>
  <% end %>
  <%= form_value_layout do %>
    <%= feature.form_builder.date_select :value,
          start_year: feature.start_year,
          end_year: feature.end_year,
          prompt: feature.prompt,
          discard_day: feature.discard_day,
          discard_month: feature.discard_month,
          discard_year: feature.discard_year,
          class: "input-xlarge" %>
    <%= feature.form_builder.hidden_field :feature_configuration_id %>
  <% end %>
<% end %>