<%= feature.form_element.fields_for :date_feature do |f| %>
  <%= form_item_layout do %>
    <%= form_label_layout do %>
      <%= f.label feature.value, feature.label %>
    <% end %>
    <%= form_value_layout do %>
      <%= f.date_select feature.value,
                        start_year: feature.start_year,
                        end_year: feature.end_year,
                        prompt: feature.prompt,
                        discard_day: feature.discard_day,
                        discard_month: feature.discard_month,
                        discard_year: feature.discard_year,
                        class: "input-xlarge" %>
      <%= feature.form_element.hidden_field :feature_configuration_id %>
    <% end %>
  <% end %>
<% end %>