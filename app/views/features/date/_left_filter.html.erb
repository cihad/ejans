<% case feature.filter_type %>
<% when :single %>
  <%= number_field_tag feature.machine_name, params["#{feature.machine_name}"], { class: "single-input" } %>
<% when :range %>
  <%= number_field_tag feature.start_machine_name, params["#{feature.start_machine_name}"], { class: "single-input", placeholder: "start year" } %>
  <%= number_field_tag feature.end_machine_name, params["#{feature.end_machine_name}"], { class: "single-input", placeholder: "end year" } %>
<% end %>