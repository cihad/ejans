<%= simple_number_field field, :maximum_select %>
<%= form_item_layout do %>
  <%= form_label_layout do %>
    <%= label_tag "List items" %>
  <% end %>
  <%= form_value_layout do %>
    <%= link_to_modal "Edit List Items" %>
  <% end %>
<% end %>

<% content_for :top do %>
  <%= modal "List items" do %>
    <ul>
      <% @fc.child.list_items.each do |list_item| %>
        <%= content_tag :li do %>
          <%= list_item.name %>
        <% end %>
      <% end %>
    </ul>
    <%= form_for Features::ListItem.new, url: list_items_path, remote: true do |f| %>
      <%= hidden_field_tag :feature_configuration_id, "#{@fc.id}" %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.submit %>
    <% end %>
  <% end %>
<% end %>