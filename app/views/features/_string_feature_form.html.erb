<%= feature.form_element.fields_for :string_feature do |f| %>
  <%= form_item_layout do %>
    <%= form_label_layout do %>
      <%= f.label feature.value, feature.label %>
    <% end %>
    <%= form_value_layout do %>
      <% if feature.text_field? %>
        <%= f.text_field feature.value, maxlength: feature.max  %>
      <% else %>
        <%= f.text_area feature.value, rows: feature.row, maxlength: feature.max, class: "input-xlarge" %>
      <% end %>
      <% if feature.max %>
        <p class="right-align mini-font no-margin"><span class="chars-left pastelred"><%= feature.max %></span> char left.</p>
        <%= javascript_tag do %>
          $('textarea').maxlength({
            'feedback' : '.chars-left'
          });
        <% end %>
      <% end %>
      <%= feature.form_element.hidden_field :feature_configuration_id %>
    <% end %>
  <% end %>
<% end %>