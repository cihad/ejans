<%= feature.form_element.fields_for :integer_feature do |f| %>
  <%= form_item_layout do %>
    <%= form_label_layout do %>
      <%= f.label feature.value, feature.label %>
    <% end %>
    <%= form_value_layout do %>
      <%= f.number_field feature.value, class: "input-xlarge" %>
      (<%= feature.minimum %> - <%= feature.maximum %>)
      <%= feature.form_element.hidden_field :feature_configuration_id %>
    <% end %>
  <% end %>
<% end %>