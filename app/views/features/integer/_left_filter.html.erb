<% case feature.filter_type %>
<% when :number_field %>
  <%= number_field_tag feature.machine_name, params["#{feature.machine_name}"], { class: "single-input", max: feature.max, max: feature.max } %>
<% when :range_with_number_field, :range_with_slider %>
  <%= number_field_tag feature.min_machine_name, params["#{feature.min_machine_name}"], { class: "single-input", placeholder: "min", min: feature.min, max: feature.max } %>
  <%= number_field_tag feature.max_machine_name, params["#{feature.max_machine_name}"], { class: "single-input", placeholder: "max", min: feature.min, max: feature.max } %>
<% end %>