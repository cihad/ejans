<%= select_tag  feature.machine_name,
                options_for_select(feature.list_items.inject({}) { |hash, item| hash[item.name] = item.id; hash }, params["#{feature.machine_name}"]),
                multiple: true,
                class: "multiple-select" %>

<%= javascript_tag do %>
    $(".multiple-select").multiselect({
      noneSelectedText: '<%= feature.label %>',
      header: false,
      selectedList: 2,
      minWidth: 200,
    }).multiselectfilter();
<% end %>