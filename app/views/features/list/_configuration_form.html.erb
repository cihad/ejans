<%= simple_check_box f,
      :filter,
      input: { data: { toggle: "filter" } } %>

<%= simple_number_field f, :maximum_select %>

<%= form_item_layout do %>
  <%= form_label_layout do %>
    <%= label_tag "List items" %>
  <% end %>
  <%= form_value_layout do %>
    <%= link_to_pjax_modal "edit list_items", edit_list_items: true %>
  <% end %>
<% end %>

<% content_for :top do %>
  <% pjax_modal("List items", :edit_list_items) do %>
    <ul>
      <% @fc.list_items.each do |list_item| %>
        <%= content_tag :li do %>
          <%= list_item.name %>
        <% end %>
      <% end %>
    </ul>
    <%= form_for Features::ListItem.new, url: list_items_path, remote: true do |f| %>
      <%= hidden_field_tag :feature_configuration_id, "#{@fc.id}" %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.submit %>
    <% end %>
  <% end %>
<% end %>