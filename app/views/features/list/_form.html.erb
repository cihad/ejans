<%= form_item_layout do %>
  <%= form_label_layout do %>
    <%= feature.form_builder.label feature.form_key, feature.label %>
  <% end %>
  <%= form_value_layout do %>
    <% if feature.maximum_select == 1 %>
      <%= feature.form_builder.collection_select feature.list_item_ids_name, feature.conf.list_items, :id, :name %>
    <% else %>
      <%= feature.form_builder.collection_select feature.list_item_ids_name, feature.conf.list_items, :id, :name, {}, multiple: true %>
    <% end %>
    <%= feature.form_builder.hidden_field :feature_configuration_id %>
  <% end %>
<% end %>