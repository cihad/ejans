<%= select_tag feature.machine_name,
      options_for_select(
        feature.list_items.inject({}) do |hash, item|
          hash[item.name] = item.id
          hash
        end,
        params["#{feature.machine_name}"]),
      multiple: true,
      class: "input-mini multiple-select" %>

<%= javascript_tag do %>
    $(".multiple-select").multiselect({
      noneSelectedText: 'Select',
      header: false,
      selectedList: 2,
      minWidth: 120,
    }).multiselectfilter();
<% end %>