<%= page_title "Places" %>

<%= render 'places_list', places: @places %>

<script type="text/javascript">
(function(){
  $('.places li .controls').hide();

  $('.place').live('mouseenter', function(){
    $(this).children('.controls').show();
  }).live('mouseleave', function(){
    $(this).children('.controls').hide();
  })
})();
</script>