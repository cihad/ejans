<% case @event %>
<% when "add_child_categories" %>
  $('#overlay').append("<%=j static_modal(@parent_category.name) {render 'form'} %>")
<% when "show" %>
  if ( $('#category_<%= @parent_category.id %> ul').size() == 0 ) {
    $('#category_<%= @parent_category.id %>').append("<%=j render 'categories_list', categories: @child_categories %>");
  }
<% when "add_category" %>
  $('#overlay').append("<%=j static_modal(@parent_category.try(:name)) {render 'form'} %>")
<% end %>