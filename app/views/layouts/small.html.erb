<!DOCTYPE html>
<html>

<head>
  <title><%= full_title(yield(:title)) %></title>
  <meta name="robots" content="noindex">
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<!-- /HEAD -->

<%
contentspan = content_for?(:left) ? 'span6' : 'span9'

%>

<body class="oneColumn <%= yield(:body_class) %>">

  <!-- Container -->
  <div class="container">
    <div class="middle-align">
      <%= render 'layouts/header_small' %>

      <div class="page">
        <div class="row">


          <div class="span4">
            <section id="content">
              <%= render 'devise/shared/links' %>
              <%= render 'layouts/messages' %>
              <%= yield %>
            </section>
          </div>
          <!-- /Content -->


        </div>
      </div>
      <!-- /Page -->

      <%= render 'layouts/footer' %>
    </div>
  </div>
  <!-- /Container -->
  <%= yield :bottom %>

  <%= render 'shared/analytics' %>
</body>
</html>
  