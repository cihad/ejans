<div class="modal hide fade" id="signin-modal" style="margin-left:-160px; width: 340px;">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>Sign in</h3>
  </div>
  <div class="modal-body">
    <%= form_for "account", :url => account_session_path, :html => { :id => "signin-form" } do |f| %>
        <p>
          <%= f.label :email %>
          <%= f.text_field :email, :class => "span4" %>
        </p>

        <p>
          <%= f.label :password %>
          <%= f.password_field :password, :class => "span4" %>
        </p>

        <p>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </p>
  </div>
  <div class="modal-footer">
    <%= f.submit 'Sign in', :class => "btn btn-primary" %>
    <%= link_to "Forgot your password?", new_password_path('account'), :class => "btn" %>
    <% end %>
  </div>
</div>