<%= fade_effect "header", "fast", 0.85 %>
<header class="clearfix">
  <%= link_to content_tag("h1", "Synchronize.me"), root_path, :id => "logo" %>
  <nav>
    <% if account_signed_in? %>
      <div class="nav-list menu-list"><a href="#" class="account nav-list-a"><span><%= current_account.email %></span></a>
        <div id="account_menu">
          <div id="account-menu-ins">
            <ul>
              <li><%= link_to "Edit", edit_account_registration_path, :method => :get %></li>
              <li><%= link_to "Subscription settings", subscriptions_path %></li>
              <li><%= link_to "Sign out", destroy_account_session_path, :method => :delete %></li>
            </ul>
          </div>
        </div>
      </div>
    <% else %>
      <div class="nav-list"><a href="#modal-signin" class="signin nav-list-a">Sign in</a></div>
    <% end %>
  </nav>
</header>