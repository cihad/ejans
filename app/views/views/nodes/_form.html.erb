<%#= link_to t('views.node.fill_a_sample_view'),
      fill_a_sample_view_node_type_views_node_path(@node_type),
      class: "btn btn-reverse",
      confirm: t('views.node.sample_view_message') %>

<%= button_to t('views.node.fill_a_sample_view'),
      node_type_views_node_path(@node_type),
      method: "put",
      name: "views_node[fill_a_sample_view]",
      confirm: t('views.node.sample_view_message'),
      class: "btn pull-right" %>

<%= javascript 'aceajax/ace.js' %>

<%= simple_form_for @view, url: node_type_views_node_path(@node_type), method: :put do |f| %>

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li><a href="#tab1" data-toggle="tab">CSS</a></li>
      <li><a href="#tab2" data-toggle="tab">JS</a></li>
      <li class="active"><a href="#tab3" data-toggle="tab">Node</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane" id="tab1">
        <%= render 'views/shared/inputs/css', f: f %>
      </div>

      <div class="tab-pane" id="tab2">
        <%= render 'views/shared/inputs/js', f: f %>
      </div>

      <div class="tab-pane active" id="tab3">
        <%= render 'views/shared/inputs/user_input_node_template', f: f %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

