<%= form_tag node_type_nodes_path(), method: :get, class: "filter-form filters-left" do %>

  <% @node_type.filters.each do |conf| %>
    <%= render 'nodes/filters_left_side/filter_block', filter: filter_for(conf) %>
  <% end %>

  <%= hidden_field_tag "view_id", params[:view_id] %>
  <%= hidden_field_tag "sort", params[:sort] %>
  <%= hidden_field_tag "direction", params[:direction] %>
  <%= submit_tag "Filter", class: "btn btn-success" %>
<% end %>