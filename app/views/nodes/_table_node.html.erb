<tr>
  <td>
    <%= node.title %>
  </td>
  <% @node_type.table_features.each do |feature| %>
    <td>
      <%= feature_view(node.find_value_by_views_feature(feature)) %>
    </td> 
  <% end %>

  <td>
    <%= link_to "show", "#myModal", class: "popup-node", data: { pjax: node_type_nodes_url(@node_type, node_id: node), toggle: "modal" } %>
  </td>
</tr>