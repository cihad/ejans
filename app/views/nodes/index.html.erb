<%= content_tag :h2, @node_type.name %>

<%= form_tag node_type_nodes_path, method: :get, class: "well form-inline" do %>
  <% @node_type.filters.each do |filter| %>
    <%= filter_for(filter) %>
  <% end %>

  <%= submit_tag "Filter", class: "btn" %>
<% end %>

<table class="table table-form">
  <%= render @nodes %>
</table>
