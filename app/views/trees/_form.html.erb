<%= horizontal_form_for @node do |f| %>
  <% unless @node.root? %>
    <%= f.input :parent_node_name do %>
      <span class="span4 uneditable-input"><%= @node.parent.name %></span>
    <% end %>
  <% end %>

  <%= f.input :name, input_html: { class: 'span4' } %>
  <%= f.input :child_nodes, as: :text, input_html: { rows: 10, class: 'span4' } %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>