<% MailView.new(self) do |m| %>
   <%= m.html do %>
    <%= m.head %>
    <%= m.body do %>
      <%= m.topbar web_version_url: node_type_mailer_template_url(@mailer_template.node_type, @mailer_template) %>

      <%= m.mail_title do %>
        <%= @mailer_template.title %>
      <% end %>

      <%= m.content do %>
        <%= render inline: @mailer_template.template, locals: { m: m } %>
      <% end %>

      <%= m.footer %>
    <% end %>
  <% end %>
  
<% end %>