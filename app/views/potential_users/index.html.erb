<%= node_type_navigation %>
<% provide :title, "Potential Users" %>
<% provide :body_class, "node-type-manage" %>
<%= page_title "Potential Users" %>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Tags</th>
    </tr>
  </thead>

  <tbody>
    <%= content_tag_for :tr, @potential_users do |user| %>
      <td><%= user.email %></td>
      <td><%= user.tags.join(', ') %></td>
    <% end %>
  </tbody>
</table>

