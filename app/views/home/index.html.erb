<ul id="home-services" class="clearfix nostyle-list">
  <% @services.each do |service| %>
    <li class="swi">
      <div class="ins">
        <%= link_to service do %>
          <span><%= service.title %></span>
          <%= image_tag(service.image_url, alt: service.title) %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>