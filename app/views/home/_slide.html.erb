<div id="slide">
  <div id="gallery">
    <div id="slides">
      <div class="slide" id="slide-1">
        <div class="slide-ins">
          <div id="counter">
            <p id="counter-left">servis sayısı: </p>
            <div id="counter-right">
              <div id="flip-counter" class="flip-counter clearfix"></div>
              <p style="clear:both;">artmaya devam ediyor...</p>
            </div>
          </div>
          <div class="plane_line" id="dashed_line_1"></div>
          <div class="plane_line" id="dashed_line_2"></div>
          <h1><%= t('home.slide.what_does_it_do') %></h1>
          <p><%= t('home.slide.services') %></p>
        </div>
      </div>
      <div class="slide" id="slide-2">
        <div class="slide-ins">
          <h1><%= t('home.slide.filters') %></h1>
          <p><%= t('home.slide.filters_desc') %></p>
          <div class="plane_line" id="dashed_line_3"></div>
          <%= image_tag "images/mail.png", id: "mail" %>
          <div class="plane_line" id="dashed_line_3"></div>
        </div>
      </div>
      <div class="slide" id="slide-3">
        <div class="slide-ins">
          <h1><%= t('home.slide.notification') %></h1>
          <p><%= t('home.slide.notification_desc') %></p>
        </div>
      </div>
    </div>

    <div id="menu">
      <ul>
        <li class="menuItem"><span><%= t('home.slide.what_does_it_do') %></span></li>
        <li class="menuItem"><span><%= t('home.slide.filters') %></span></li>
        <li class="menuItem"><span><%= t('home.slide.notification') %></span></li>
        <% unless user_signed_in? %>
          <li class="menuItem"><a data-toggle="modal" href="#signin-modal"><i class="icon-user"></i> <%= t('global.sign_up_in') %></a></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  var myCounter = new flipCounter('flip-counter', {value:<%= Service.count > 30 ? 30 : 0 %>, inc:1, pace:100, auto:true});
  myCounter.incrementTo(<%= Service.count %>);
<% end %>
