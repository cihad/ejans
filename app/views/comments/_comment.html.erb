<div class="row comment <%= "self" if comment.author == comment.notification.notificationable %>">
  <div class="span1 offset1">
    <div class="author">
      <%= comment.author.email.split("@")[0] %>
    </div>
  </div>
  <div class="span6">
    <div class="body">
      <div class="ins">
      <%= simple_format comment.body %>
      <%= comment.created_at %>
      </div>
    </div>
  </div>
</div>