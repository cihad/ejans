<%= user_navigation %>
<% provide :title, "#{@user.username}<#{@user.email}>".html_safe %>
<% body_class "user-manage" %>


<h3>Yayında olan node'ler</h3>
<table class="table table-striped">
  <% @user.nodes.listing.each do |node| %>
    <tr>
      <td><%= link_to node.title, node_type_node_path(node.node_type, node), remote: true %></td>
      <td><%= link_to node.node_type.name, node_type_nodes_path(node.node_type) %></td>
      <td><%= render 'node_actions_menu', node: node %></td>
    </tr>
  <% end -%>
</table>

<h3>Yayında olmayan node'ler</h3>
<table class="table table-striped">
  <% @user.nodes.waiting_for_user_action.each do |node| %>
    <tr>
      <td><%= link_to node.title, node_type_node_path(node.node_type, node), remote: true %></td>
      <td><%= link_to node.node_type.name, node_type_nodes_path(node.node_type) %></td>
    </tr>
  <% end -%>
</table>

<h3>Onay bekleyen node'ler</h3>
<table class="table table-striped">
  <% @user.nodes.queue_for_approve.each do |node| %>
    <tr>
      <td><%= link_to node.title, node_type_node_path(node.node_type, node), remote: true %></td>
      <td><%= link_to node.node_type.name, node_type_nodes_path(node.node_type) %></td>
    </tr>
  <% end %>
</table>