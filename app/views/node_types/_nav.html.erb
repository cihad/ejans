<%= tab_item "#{@node_type.name} Dashboard", @node_type %>

<%= dropdown_tab "Configurations" do %>
  <%= tab_item "Configurations", edit_node_type_path(@node_type) %>
  <%= tab_item "New Node Type", new_node_type_path %>
  <%= content_tag :li, nil, class: "divider" %>
  <%= tab_item "Delete Node Type", node_type_path(@node_type), link_to: { confirm: "Are you sure?", method: :delete } %>
<% end %>

<%= dropdown_tab "Features" do %>
  <%= tab_item "Index", node_type_features_feature_configurations_path(@node_type) %>
  <%= content_tag :li, nil, class: "divider" %>
  <% @node_type.feature_configurations.each do |conf| %>
    <%= tab_item conf.label, edit_node_type_features_feature_configuration_path(@node_type, conf) unless conf.new_record? %>
  <% end %>
<% end %>

<%= dropdown_tab "Views" do %>
  <%= tab_item "Index", node_type_views_views_path(@node_type) %>
  <%= tab_item "Edit node view", edit_node_type_views_node_path(@node_type) %>
  <%= tab_item "Edit place page view", edit_node_type_views_place_page_path(@node_type) if @node_type.place_page_view %>
  <%= content_tag :li, nil, class: "divider" %>
  <% @node_type.views.each do |view| %>
    <%= tab_item view.type.to_s.humanize,
          edit_node_type_views_view_path(@node_type, view) unless view.new_record? %>
  <% end %>
<% end %>

<%= dropdown_tab "Nodes" do %>
  <%= tab_item "Public Nodes Page", node_type_nodes_path(@node_type) %>
  <%= tab_item "Manage all nodes", manage_node_type_nodes_path(@node_type) %>
  <%= tab_item "Add new node", new_node_type_node_path(@node_type) %>
<% end %>