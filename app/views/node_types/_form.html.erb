<%= form_for @node_type do |f| %>
  <table class="table table-form">
    <%= simple_text_field f, :name %>
    <%= simple_text_field f, :title_label %>
    <%= simple_text_area f, :description, input: { rows: 3 } %>
    <%= simple_select f, :filters_position,
      f.object.class::FILTERS_POSITIONS %>
    <%= simple_number_field f, :node_expiration_day_limit %>

    <%= simple_check_box f, :commentable %>
    <%= simple_submit f %>
  </table>
<% end %>
