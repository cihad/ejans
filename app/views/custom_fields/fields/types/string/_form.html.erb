<%= form_item_layout do %>
  <%= form_label_layout do %>
    <%= field.f.label  field.form_key,
                                    field.label %>
    <%= content_tag :span, "*", class: "required" if field.required? %>
  <% end %>
  
  <%= form_value_layout do %>

    <% if field.text_field? %>
      <%= field.f.text_field field.form_key %>
    <% else %>
      <%= field.f.text_area field.form_key, rows: field.row, class: "input-xlarge" %>
    <% end %>

    <%= field.hint %>
    
  <% end %>
<% end %>
