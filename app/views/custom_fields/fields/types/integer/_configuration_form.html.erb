<%= f.input :filter,
            input_html: { :"data-toggle" => 'filter-options' },
            as: :boolean %>
<%= f.input :filter_type,
            collection: f.object.class::FILTER_TYPES,
            as: :radio_buttons,
            wrapper_html: { class: "filter-options" } %>
<%= check_box_option_for("filter-options") %>
<%= f.input :sort, as: :boolean %>
<%= f.input :minimum, as: :integer %>
<%= f.input :maximum, as: :integer %>
<%= f.input :prefix %>
<%= f.input :suffix %>
<%= f.input :thousand_marker,
            collection: f.object.class::THOUSAND_MARKERS,
            as: :radio_buttons %>