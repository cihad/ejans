<% case field.widget_type %>
<% when :radio_buttons %>

  <%= field.f.input field.form_key,
        collection: [[field.on_value, true], [field.off_value, false]],
        as: :radio_buttons,
        label: field.label,
        hint: field.hint,
        item_wrapper_class: "inline" %>

<% when :single_on_off %>

  <%= field.f.input field.form_key,
        as: :boolean,
        label: field.label,
        hint: field.hint %>

<% end %>

