<%= f.input :filter,
            input_html: { :"data-toggle" => 'filter-options' },
            as: :boolean %>

<%= f.input :filter_type,
            collection: f.object.class::FILTER_TYPES,
            as: :radio_buttons,
            wrapper_html: { class: "filter-options" } %>

<%= check_box_option_for("filter-options") %>

<%= f.input :sort, as: :boolean %>

<%= f.input :date_type, collection: f.object.class::DATE_TYPES %>

<%= f.input :start_date_type,
            collection: f.object.class::START_DATE_TYPES,
            include_blank: false %>

<%= f.input :x_years_ago_start,
            on: :integer,
            wrapper_html: { class: "x_years_ago_start" }  %>

<%= f.input :specific_start_date,
            on: :integer,
            wrapper_html: { class: "specific_start_date" }  %>

<%= select_option_for "#field_start_date_type" %>


<%= f.input :end_date_type,
            collection: f.object.class::END_DATE_TYPES,
            include_blank: false %>

<%= f.input :x_years_ago_end,
            on: :integer,
            wrapper_html: { class: "x_years_ago_end" }  %>

<%= f.input :x_years_later_end,
            on: :integer,
            wrapper_html: { class: "x_years_later_end" }  %>

<%= f.input :specific_end_date,
            on: :integer,
            wrapper_html: { class: "specific_end_date" }  %>
            
<%= select_option_for "#field_end_date_type" %>
