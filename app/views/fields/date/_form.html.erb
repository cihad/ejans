<%= form_item_layout do %>
  <%= form_label_layout do %>
    <%= field.f.label field.form_key, field.label %>
    <%= content_tag :span, "*", class: "required" if field.required? %>
  <% end %>
  <%= form_value_layout do %>
    <%= field.f.date_select field.form_key,
          default: { year: field.default_year },
          start_year: field.start_year,
          end_year: field.end_year,
          prompt: field.prompt,
          discard_day: field.discard_day,
          discard_month: field.discard_month,
          discard_year: field.discard_year,
          class: "input-xlarge" %>
          
    <%= field.help_text %>
  <% end %>
<% end %>