<%= form_item_layout do %>
  <%= form_label_layout do %>
    <%= field.f.label  field.form_key,
                                    field.label %>
    <%= content_tag :span, "*", class: "required" if field.required? %>
  <% end %>
  
  <%= form_value_layout do %>

    <% if field.text_field? %>
      <%= field.f.text_field field.form_key,
            maxlength: field.max %>
    <% else %>
      <%= field.f.text_area field.form_key,
            rows: field.row,
            maxlength: field.max,
            class: "input-xlarge" %>
    <% end %>

    <%= field.help_text %>

    <% if field.max %>
      <p class="right-align mini-font no-margin">
        <span class="chars-left pastelred">
          <%= field.max %>
        </span> char left.
      </p>

      <%= javascript_tag do %>
        $('textarea').maxlength({
          'feedback' : '.chars-left'
        });
      <% end %>
    <% end %>

    
  <% end %>
<% end %>
