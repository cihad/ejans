<%= simple_check_box f,
      :filter,
      input: { data: { toggle: "filter" } } %>

<%= simple_number_field f, :maximum_select, help: "0 secilirse sinirsiz secim yapilabilir." %>

<%= form_item_layout do %>
  <%= form_label_layout do %>
    <%= label_tag "List items" %>
  <% end %>
  <%= form_value_layout do %>
    <% if f.object.new_record? %>
      <% 5.times { f.object.list_items.build } %>
      <%= f.fields_for :list_items do |list_item| %>
        <div>
          <%= list_item.text_field :name, placeholder: "name" %>
        </div>
      <% end %>
    <% else %>
      <%= link_to_modal "Edit List Items" %>
    <% end %>
  <% end %>
<% end %>

<% unless f.object.new_record? %>
  <% content_for :top do %>
    <%= modal "List items" do %>
      <table  class="table">
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th>Name</th>
            <th>Actions</th>
        </thead>
        <tbody class="sortable"
               data-update-url="<%= sort_node_type_fields_field_configuration_list_items_path(@node_type, f.object) %>">
          <% @fc.list_items.each do |list_item| %>
            <%= render list_item, fc: f.object %>
          <% end %>
        </tbody>
        <%= form_for Fields::ListItem.new, url: node_type_fields_field_configuration_list_items_path(@node_type, f.object), remote: true do |f| %>
          <tfoot>
            <tr>
              <td>&nbsp;</td>
              <td><%= f.text_field :name, placeholder: "name" %>
              </td>
              <td><%= f.submit %></td>
          </tfoot>
        <% end %>
      </table>
    <% end %>
  <% end %>
<% end %>