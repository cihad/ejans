<%= form_item_layout do %>
  <%= form_label_layout do %>
    <%= field.f.label field.form_key, field.label %>
    <%= content_tag :span, "*", class: "required" if field.required? %>
  <% end %>
  
  <%= form_value_layout do %>
    <% if field.maximum_select == 1 %>
      <%= field.f.collection_select field.list_item_ids_name,
                                    field.conf.list_items,
                                    :id,
                                    :name,
                                    include_blank: (field.required? ? false : true) %>
    <% else %>
      <%= field.f.collection_select field.list_item_ids_name,
                                    field.conf.list_items,
                                    :id,
                                    :name,
                                    {},
                                    multiple: true,
                                    include_blank: (field.required? ? false : true),
                                    class: field.machine_name %>
      <%= multiselect "." + field.machine_name %>
    <% end %>

    <%= field.help_text %>
    
  <% end %>
<% end %>