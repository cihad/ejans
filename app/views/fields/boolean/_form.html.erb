<%= form_item_layout do %>
  <%= form_label_layout do %>
    <%= field.f.label field.form_key, field.label %>
    <%= content_tag :span, "*", class: "required" if field.required? %>
  <% end %>
  <%= form_value_layout do %>

    <% case field.widget_type %>
    <% when :radio_buttons %>
      <label class="radio inline">
        <%= radio_button_tag "node[#{field.form_key}]", "1", @node.send("#{field.form_key}?") %> <%= field.on_value %>
      </label>
      <label class="radio inline">
        <%= radio_button_tag "node[#{field.form_key}]", "0", !@node.send("#{field.form_key}?") %> <%= field.off_value %>
      </label>

    <% when :single_on_off %>
      <label class="checkbox inline">
        <%= field.f.check_box field.form_key %> <%= field.on_value %>
      </label>
    <% end %>
          
    <%= field.help_text %>
  <% end %>
<% end %>