<%= form_for  CustomFields::Fields::Image::Image.new,
              url: node_type_node_images_path(@node_type._id, @node._id, token: params[:token]),
              as: :image,
              remote: true do |image| %>
  <%= hidden_field_tag 'token', params[:token]  %>
  <%= hidden_field_tag 'node_id', @node.id  %>
  <%= hidden_field_tag 'machine_name', machine_name  %>
  <%= image.file_field :image, multiple: true %>
  <%= image.submit t('images.add') %>
<% end %>