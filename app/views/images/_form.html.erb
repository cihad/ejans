<%= form_for  Fields::Image.new,
              url: node_type_node_images_path(@node_type, @node),
              remote: true do |image| %>
  <%= hidden_field_tag 'node_id', @node.id  %>
  <%= hidden_field_tag 'keyname', keyname  %>
  <%= image.file_field :image, multiple: true %>
  <%= image.submit t('images.add') %>
<% end %>