<%= form_for [@node_type, @mailer] do |f| %>
  <table class="table table-form">

    <%= simple_select f,
          :mailer_template_id,
          @node_type.mailer_templates.map { |tmp| [tmp.title, tmp.id] } %>

    <%= form_item_layout do %>
      <%= form_label_layout do %>
        <%= label_tag "Potential users" %>
      <% end %>

      <%= form_value_layout do %>

        <p style="border-bottom: 1px solid #ccc; padding-bottom: 5px;">
          <script type="text/javascript">
            $(function () {
              $("#select-all").click(function(){
                   $(this).closest('td')
                          .find(':checkbox').attr('checked', this.checked);
              });

              $('.inline [type=checkbox]').click(function() {
                name = $(this).attr('name');
                // console.log($('.' + name));
                $('.' + name).attr('checked', this.checked);
              })
            });
          </script>
          <label class="checkbox inline">
            <%= check_box_tag "select-all", "" %>
            Hepsini se√ß
          </label>

          <% hash = @node_type.potential_users.inject({}) do |h, u| 
            u.tags.each do |tag|
              h[tag] ||= 0
              h[tag] += 1
            end
            h
          end %>

          <% tags = hash.sort_by { |k,v| v }.reverse.map { |a| a.first.strip } %>

          <% tags.each do |tag| %>        
            <label class="checkbox inline ">
              <%= check_box_tag tag, "", nil, class: tag %>
              <%= tag %>
            </label>
          <% end %>
        </p>

        <% @node_type.potential_users.each do |user| %>
          <label class="checkbox">
            <%= check_box_tag "mailer[potential_user_ids][]", user.id, nil, class: user.tags.join(' ') %>
            <%= user.email %>
          </label>  
        <% end %>
      <% end %>
    <% end %>

    <%= simple_submit f %>
  </table>
<% end %>