<%= horizontal_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <legend><%=t 'devise.passwords.forget' %></legend>
  <%#= devise_error_messages! %>
  <%#= error_messages_for resource %>

  <%= f.input :email, as: :email %>

  <div class="form-actions">
    <%= f.button :submit, t('devise.passwords.send_new') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
