<% provide :body_class, 'small-page' %>

<%= column_navbar title: t('devise.passwords.forget') do %>
  <%= render "devise/shared/links" %>
<% end %>

<%= horizontal_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%#= devise_error_messages! %>
  <%#= error_messages_for resource %>

  <%= f.input :email, as: :email %>

  <div class="form-actions page-bottom-actions">
    <%= f.button :submit, t('devise.passwords.send_new') %>
  </div>
<% end %>
