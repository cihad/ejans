<% provide :body_class, 'small-page' %>

<%= column_navbar title: "Change your password" do %>
  <%= render "devise/shared/links" %>
<% end %>

<%= horizontal_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  
  <%#= devise_error_messages! %>
  <%#= error_messages_for resource %>

  <%= f.input :reset_password_token, as: :hidden %>

  <%= f.input :password, as: :password %>
  <%= f.input :password_confirmation, as: :password %>


  <div class="form-actions page-bottom-actions">
    <%= f.button :submit, t('devise.passwords.change') %>
  </div>
<% end %>

