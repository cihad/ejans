<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <legend><%=t 'sessions.signin' %></legend>

  <table class="table table-form">
    <%= simple_email_field f, :email, label: { name: t('sessions.email') } %>
    <%= simple_password_field f, :password, label: { name: t('sessions.password') } %>

    <% if devise_mapping.rememberable? -%>
      <%= checkbox_group "" do %>
        <%= label_tag nil, class: "checkbox" do %>
          <%= f.check_box :remember_me %> <%=t 'sessions.remember_me' %>
        <% end %>
      <% end %>
    <% end -%>

    <%= simple_submit f, t('sessions.signin') %></div>
  </table>
<% end %>

<%= render "devise/shared/links" %>
