<% provide :body_class, 'small-page' %>

<%= column_navbar title: t('users.signup') do %>
  <%= render "devise/shared/links" %>
<% end %>

<%= horizontal_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <%#= devise_error_messages! %>  
  <%#= error_messages_for resource %>

  <%= f.input :email, as: :email %>
  <%= f.input :password, as: :password, hint: false %>
  <%= f.input :password_confirmation, as: :password %>

  <div class="form-actions page-bottom-actions">
    <%= f.button :submit, t('users.signup') %>
  </div>
<% end %>

