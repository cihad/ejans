<% page_name = "Sign up" %>
<%= title page_name %>

<%
  breadcrumbs.add page_name
%>

<%= content_tag :h2, page_name %>

<div class="page-form">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-item email-field clearfix">
    <%= f.label :email, :class => "main-label" %>
    <span class="long-field">
      <%= f.email_field :email %>
    </span>
  </div>

  <div class="form-item password-field clearfix">
    <%= f.label :password, :class => "main-label" %>
    <span class="long-field">
      <%= f.password_field :password %>
    </span>
  </div>

  <div class="form-item password-field clearfix">
    <%= f.label :password_confirmation, :class => "main-label" %>
    <span class="long-field">
      <%= f.password_field :password_confirmation %>
    </span>
  </div>

  <div id="submit">
    <%= f.submit "Sign up", :style => "margin-left: 190px" %>
  </div>
<% end %>
</div>

<%= render :partial => "devise/shared/links" %>
