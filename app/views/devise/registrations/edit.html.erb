<% page_name = "Edit #{resource_name.to_s.humanize}" %>
<%= body_class "user-page" %>
<%
  breadcrumbs.add page_name
%>

<%= content_tag :h2 do %>
  <%= page_name %>
  <span style="font-size:10px; line-height: 1em">(Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.)</span>
<% end %>


<div class="page-form">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-item email-field clearfix">
    <%= f.label :email, :class => "main-label" %>
    <span class="long-field">
      <%= f.email_field :email %>
    </span>
  </div>

  <div class="form-item password-field clearfix">
    <%= f.label :password, "New password", :class => "main-label" %> 
    <span class="long-field">
      <%= f.password_field :password %>
      <i>leave blank if you don't want to change it</i>
    </span>
  </div>

  <div class="form-item password-field clearfix">
    <%= f.label :password_confirmation, :class => "main-label" %>
    <span class="long-field">
      <%= f.password_field :password_confirmation %>
    </span>
  </div>

  <div class="form-item password-field clearfix">
    <%= f.label :current_password, :class => "main-label" %>
    <span class="long-field">
      <%= f.password_field :current_password %>
      <i>we need your current password to confirm your changes</i>
    </span>
  </div>

  <div id="submit">
    <%= f.submit "Update", :style => "margin-left: 190px" %>
    <%= link_to "Cancel", :back %>
  </div>
<% end %>

<%= content_for(:left) do %>
  <%= render "devise/shared/user_menu" %>
<% end %>