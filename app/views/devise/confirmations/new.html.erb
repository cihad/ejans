<legend><%=t 'devise.confirmations.resend' %></legend>

<%= horizontal_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.input :email, as: :email %>
  <div class="form-actions">
    <%= f.button :submit, t('devise.confirmations.send') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
