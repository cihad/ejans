<ul class="nav nav-tabs">
  <%#- if controller_name != 'sessions' %>
    <%= menu_item t('account.signin'), new_session_path(resource_name) %>
  <%# end -%>

  <%- if devise_mapping.registerable? #&& controller_name != 'registrations' %>
    <%= menu_item t('account.signup'), new_registration_path(resource_name) %>
  <% end -%>

  <%- if devise_mapping.recoverable? #&& controller_name != 'passwords' %>
    <%= menu_item t('devise.passwords.new_password'), new_password_path(resource_name) %>
  <% end -%>

  <%- if devise_mapping.confirmable? #&& controller_name != 'confirmations' %>
    <%= menu_item "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) #&& controller_name != 'unlocks' %>
    <%= menu_item "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= menu_item "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
    <% end -%>
  <% end -%>
</ul>