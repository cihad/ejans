<table class="table table-node table-striped table-hover">
  <tr>
    <th><%= {{belongs_to}}.label %></th>
    <td><%= node.{{belongs_to}}.title %></td>
  </tr>
  <tr>
    <th><%= {{boolean}}.label %></th>
    <td><%= node.{{boolean}} %></td>
  </tr>
  <tr>
    <th><%= {{date}}.label %></th>
    <td><%= node.{{date}} %></td>
  </tr>
  <tr>
    <th><%= {{image}}.label %></th>
    <td>
      <% node.{{image}}(:thumb).each do |image_url| %>
        <img src="<%= image_url %>" />
      <% end %>
    </td>
  </tr>
  <tr>
    <th><%= {{integer}}.label %></th>
    <td>
      <%= {{integer}}.prefix %>
      <%= node.{{integer}} %>
      <%= {{integer}}.suffix %>
    </td>
  </tr>
  <tr>
    <th><%= {{select}}.label %></th>
    <td><%= node.{{select}}.join(', ') %></td>
  </tr>
  <tr>
    <th><%= {{place}}.label %></th>
    <td>
      <% node.{{place}}.each do |row| %>
        <%= row.join(', ') %><br />
      <% end %>
    </td>
  </tr>
  <tr>
    <th><%= {{string}}.label %></th>
    <td><%= node.{{string}} %></td>
  </tr>
  <tr>
    <th><%= {{tag}}.label %></th>
    <td><%= node.{{tag}}.join(', ') %></td>
  </tr>
  <tr>
    <th><%= {{tree_category}}.label %></th>
    <td><%= node.{{tree_category}}.join(', ') %></td>
  </tr>
</table>